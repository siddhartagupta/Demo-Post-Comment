<h1>Current Posts Details</h1>
<% if user_signed_in? %>
    <%= current_user.email %>
<% end%>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
      <% @post.each do |p|%>
        <tr>
          <td><%= p.user.email%></td>
          <td><%= p.title %></td>
          <td><%= p.content %></td>
          <td><%= p.created_at.strftime("%F") %></td>
          
        </tr>
      <% end %>
  </tbody>
</table>